{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "amd": true,
    "es6": true,
    "node": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack/config.babel.js"
      }
    }
  },
  "rules": {
    "camelcase": 0,
    "comma-dangle": [2, "never"],
    "semi": 0,
    "no-underscore-dangle": 0
  }
}
